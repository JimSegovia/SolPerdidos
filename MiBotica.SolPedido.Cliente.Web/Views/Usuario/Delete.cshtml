@model MiBotica.SolPedido.Entidades.Core.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="fa fa-exclamation-triangle"></i> Confirmar Eliminación</h3>
        </div>
        <div class="card-body">
            <p class="text-danger">
                ¿Estás seguro de que deseas eliminar este usuario? Esta acción no se puede deshacer.
            </p>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdUsuario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdUsuario)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodUsuario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CodUsuario)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombres)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombres)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>
